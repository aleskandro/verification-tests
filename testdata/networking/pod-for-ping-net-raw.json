{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "hello-pod",
    "labels": {
      "name": "hello-pod"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "hello-pod",
        "image": "quay.io/aleskandrox/hello-pod:centos-8080",
        "securityContext": {
          "capabilities": {
            "add": [
              "NET_RAW"
            ]
          }
        }
      }
    ]
  }
}
