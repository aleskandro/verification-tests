{
 "apiVersion": "v1",
 "kind": "Pod",
  "metadata": {
    "name": "secretpd"
  },
  "spec": {
    "containers": [
      {
      "name": "c1",
      "image": "quay.io/aleskandrox/hello-pod:centos-8081",
      "volumeMounts": [
        {
        "name": "secret",
        "mountPath": "/mnt/secret",
        "readOnly": false
        }
       ]
     }
    ],
    "securityContext": {
        "fsGroup": 123456,
        "seLinuxOptions": {
            "level": "s0"
        }
    },
    "volumes": [{
      "name": "secret",
      "secret": {
        "secretName": "mysecret"
      }
    }]
  }
}
