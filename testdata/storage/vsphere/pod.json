{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "thin1"
    },
    "spec": {
        "containers": [{
            "name": "vsphere",
            "image": "quay.io/aleskandrox/hello-pod:centos-8081",
            "imagePullPolicy": "IfNotPresent",
            "volumeMounts": [{
                "mountPath": "/mnt/vsphere",
                "name": "vsphere"
            }]
        }],
       "securityContext": {
            "runAsUser": 1001003,
            "fsGroup": 123456,
            "supplementalGroups": [111,112,113],
            "seLinuxOptions": {
                 "level": "s0"
            }
       },
        "volumes": [{
            "name": "vsphere",
            "persistentVolumeClaim": {
                "claimName": "vspherec"
            }
        }]
    }
}
