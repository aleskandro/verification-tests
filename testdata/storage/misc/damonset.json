{
    "apiVersion": "apps/v1",
    "kind": "DaemonSet",
    "metadata": {
        "name": "dpod"
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "app": "dpod"
            }
        },
        "template":{
            "metadata": {
                "name": "dpod",
                "labels": {
                    "app": "dpod"
                }
            },
            "spec": {
                "containers": [{
                    "name": "myfrontend",
                    "image": "quay.io/aleskandrox/hello-pod:centos-8081",
                    "imagePullPolicy": "IfNotPresent",
                    "ports": [{
                        "containerPort": 80,
                        "name": "http-server"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/mnt/ds",
                        "name": "pvol"
                    }]
                }],
                "volumes": [{
                    "name": "pvol",
                    "persistentVolumeClaim": {
                        "claimName": "ds"
                    }
                }]
            }
        }
    }
}
